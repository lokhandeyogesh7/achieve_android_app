<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@font/myfont</item>
        <item name="android:textAppearance">@font/myfont</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="buttonStyle">@style/btn_style</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@font/myfont</item>
        <item name="android:textAppearance">@font/myfont</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="buttonStyle">@style/btn_style</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black_overlay</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="background">@android:drawable/editbox_background_normal</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
    </style>

    <style name="btn_style" parent="@android:style/Widget.Button">
        <item name="background">@drawable/round_button</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
    </style>


    <style name="MyRatingBar" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:maxHeight">@dimen/_40sdp</item>
    </style>

    <style name="MyRatingBarSmall" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:maxHeight">@dimen/_35sdp</item>
    </style>

    <style name="MyRatingBarThin" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:minHeight">@dimen/_25sdp</item>
        <item name="android:maxHeight">@dimen/_25sdp</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/myfont</item>
    </style>

</resources>
