<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlPersnInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlProfile"
    android:layout_margin="10dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:paddingStart="@dimen/_5sdp"
            android:layout_width="@dimen/_100sdp"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_margin="@dimen/_5sdp"
            app:civ_border_color="@android:color/tab_indicator_text"
            android:layout_height="@dimen/_100sdp"
            android:src="@mipmap/ic_launcher"
            android:paddingLeft="@dimen/_5sdp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/ivUploadPic"
            app:srcCompat="@drawable/ic_photo_camera"
            android:layout_alignRight="@+id/ivProfile"
            android:layout_alignBottom="@+id/ivProfile"/>

        <TextView
            android:id="@+id/tvTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_toRightOf="@+id/ivProfile"
            android:fontFamily="@font/myfont"
            android:text="9561424969"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTelephone"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/ivProfile"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_toRightOf="@+id/ivProfile"
            android:fontFamily="@font/myfont"
            android:text="dummy@email.com"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>