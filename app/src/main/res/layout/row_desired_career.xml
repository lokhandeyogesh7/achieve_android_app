<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvFunctionAreaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:text="Personal Information"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvIndustryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvCareerRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvJobType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvEmpType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/myfont"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvDesShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/myfont"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvExpSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/myfont"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />

 <TextView
            android:id="@+id/tvExpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/myfont"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Male /n single /n Nashik"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
