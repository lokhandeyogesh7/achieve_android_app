<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvMainEmpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/myfont"
            android:padding="@dimen/_2sdp"
            android:text="Performance Status : Good in Communication"

            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMainEmpName"
            android:fontFamily="@font/myfont"
            android:padding="@dimen/_2sdp"
            android:text="Start Date : 12/02/2018"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:fontFamily="@font/myfont"
            android:padding="@dimen/_2sdp"
            android:text="Average"
            android:textSize="@dimen/_12sdp" />


        <RatingBar
            android:id="@+id/rbMainEmp"
            style="@style/MyRatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPerformance"
            android:layout_centerInParent="true"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:rating="1"
            android:stepSize="1.0" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

