<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3c3c3c3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlResumeHeadline"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDownloadResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/round_button"
            android:padding="@dimen/_5sdp"
            android:text="View resume"
            android:textColor="@android:color/white" />


        <android.support.v7.widget.CardView
            android:id="@+id/rlPersnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDownloadResume"
            android:layout_margin="10dp"
            android:elevation="4dp"
            app:cardElevation="@dimen/_4sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lblResumeHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:text="Personal Information"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/sepearator2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lblResumeHeadline"
                    android:background="@color/bgGrey" />

                <TextView
                    android:id="@+id/tvPersonalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sepearator2"
                    android:fontFamily="@font/myfont"
                    android:text="Bachelor's degree in Finance|Excellent experience of handling Business Intelligence Tools and Dashboard Reports|Skilled at consolidating and analyzing Financial Data|Highly capable of Budgeting, Financial Forecasting, and Modelling tools."
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>