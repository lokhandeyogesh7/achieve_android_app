<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3c3c3c3">


    <android.support.v7.widget.CardView
        android:id="@+id/rlPersnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/lblResumeHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:fontFamily="@font/myfont"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/lblResumeHeadline"
                android:id="@+id/sepearator2"
                android:background="@color/bgGrey"/>

            <TextView
                android:id="@+id/tvPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sepearator2"
                android:fontFamily="@font/myfont"
                android:textSize="@dimen/_12sdp"
                android:text="Bachelor's degree in Finance|Excellent experience of handling Business Intelligence Tools and Dashboard Reports|Skilled at consolidating and analyzing Financial Data|Highly capable of Budgeting, Financial Forecasting, and Modelling tools."
                 />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>