<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="@dimen/_5sdp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_15sdp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvFunctionAreaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Functional Area:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <Spinner
                android:id="@+id/spFunctionalArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvIndustryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Industry:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <Spinner
                android:id="@+id/spIndustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvCareerRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Role:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <Spinner
                android:id="@+id/spRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Location:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <Spinner
                android:id="@+id/spLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvJobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Job Type:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <RadioGroup
                android:id="@+id/radioJobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblGender"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_8sdp">

                <RadioButton
                    android:id="@+id/radioPermanent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Permanent"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioContract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:checked="false"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Contractual"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvEmpType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Employment Type:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <RadioGroup
                android:id="@+id/radioEmpType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp">

                <RadioButton
                    android:id="@+id/radioFT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Full Time"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioPT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:checked="false"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Part Time"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvDesShift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Shift Timing:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <RadioGroup
                android:id="@+id/radioShifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp">

                <RadioButton
                    android:id="@+id/radioDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Day"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioNight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:checked="false"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Night"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioFlexi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:checked="false"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Flexible"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvExpSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/myfont"
                android:text="Expected Salary:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etExpSalary"
                android:background="@android:drawable/editbox_background"/>

            <RadioGroup
                android:id="@+id/radioSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp">

                <RadioButton
                    android:id="@+id/radioINR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Indian Rupee"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioDollar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:checked="false"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:text="Dollar"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />
            </RadioGroup>


            <TextView
                android:id="@+id/tvSubmitCareerPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="SUBMIT"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>