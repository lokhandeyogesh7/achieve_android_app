<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvDateRevList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:padding="@dimen/_2sdp"
                android:text="From Date kjasahdsd"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvFeedbackEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDateRevList"
                android:fontFamily="@font/myfont"
                android:padding="@dimen/_2sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="From Date kjasahdsd"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/tvPerStatusEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFeedbackEmployee"
                android:fontFamily="@font/myfont"
                android:padding="@dimen/_2sdp"
                android:text="From Date kjasahdsd"
                android:textSize="@dimen/_12sdp" />

            <RatingBar
                android:id="@+id/rbEmployeeReview"
                style="@style/MyRatingBarThin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPerStatusEmployee"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:stepSize="0.1" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>