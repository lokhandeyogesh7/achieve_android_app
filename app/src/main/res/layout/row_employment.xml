<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/ivEditEmployment"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pencil_edit_button" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My project 1"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvCompanyName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator1"
            android:text="M"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvStartEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDesignation"
            android:text="M"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvCurrentEmployment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartEndDate"
            android:text="M"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCurrentEmployment"
            android:text="M"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>