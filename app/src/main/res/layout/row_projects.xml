<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivEditProject"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My project 1"
            android:layout_toStartOf="@+id/ivEditProject"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvProjectTitle"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator1"
            android:text="M"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>