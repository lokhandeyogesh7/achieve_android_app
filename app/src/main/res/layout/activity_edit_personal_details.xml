<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardEmployee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@color/bgGrey"
        android:padding="@dimen/_15sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:id="@+id/lblGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Gender:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/radioGrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblGender"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_8sdp">

                    <RadioButton
                        android:id="@+id/radioM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:checked="true"

                        android:drawableStart="@drawable/ic_masculine"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Male"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:checked="false"
                        android:drawableStart="@drawable/ic_femenine"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Female"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/lblMaritalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGrp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Marital Status:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/radioGrpMarital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblMaritalStatus"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_8sdp">

                    <RadioButton
                        android:id="@+id/radioSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:checked="true"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Single"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioMarried"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Married"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioDivorcee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Divorced"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioWidowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Widowed"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Other"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioSeperated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/myfont"
                        android:text="Separated"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="@dimen/_12sdp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/lblHomeTown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGrpMarital"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Hometown:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etHometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblHomeTown"
                    android:fontFamily="@font/myfont"
                    android:hint="Hometown"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/lblDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etHometown"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Date of Birth:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblDOB"
                    android:clickable="true"
                    android:editable="false"
                    android:fontFamily="@font/myfont"
                    android:hint="Date of birth"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/lblResAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etDob"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Residential Address:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etResAddOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblResAddress"
                    android:fontFamily="@font/myfont"
                    android:hint="Residential address line one"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etResAddTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etResAddOne"
                    android:fontFamily="@font/myfont"
                    android:hint="Residential address line two"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etResAddPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etResAddTwo"
                    android:fontFamily="@font/myfont"
                    android:hint="Pin"
                    android:inputType="number"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/lblPerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etResAddPin"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Permanent Address:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etPerAddOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblPerAddress"
                    android:fontFamily="@font/myfont"
                    android:hint="Permanent address line one"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etPerAddTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etPerAddOne"
                    android:fontFamily="@font/myfont"
                    android:hint="Permanent address line two"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etPerAddPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etPerAddTwo"
                    android:fontFamily="@font/myfont"
                    android:hint="Pin"
                    android:inputType="number"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:id="@+id/llLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_below="@+id/etPerAddPin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Languages"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Language"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spLanguage1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Proficiency"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spProficiency1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Can be"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbRead1"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Read" />

                        <CheckBox
                            android:id="@+id/cbWrite1"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/myfont"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Write" />

                        <CheckBox
                            android:id="@+id/cbSpeak1"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Speak" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:textColor="@android:color/tab_indicator_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Language"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spLanguage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Proficiency"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spProficiency2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Can be"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbRead2"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Read" />

                        <CheckBox
                            android:id="@+id/cbWrite2"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/myfont"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Write" />

                        <CheckBox
                            android:id="@+id/cbSpeak2"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Speak" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:textColor="@android:color/tab_indicator_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Language"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spLanguage3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Proficiency"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spProficiency3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:text="Can be"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbRead3"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Read" />

                        <CheckBox
                            android:id="@+id/cbWrite3"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/myfont"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Write" />

                        <CheckBox
                            android:id="@+id/cbSpeak3"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/myfont"
                            android:layout_height="match_parent"
                            android:layout_weight="3.33"
                            android:textColor="@android:color/tab_indicator_text"
                            android:text="Speak" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llLanguages"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/round_button"
                    android:fontFamily="@font/myfont"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>