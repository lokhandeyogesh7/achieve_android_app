<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlResumeHeadline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3c3c3c3">

    <TextView
        android:id="@+id/tvUploadResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/round_button"
        android:padding="@dimen/_5sdp"
        android:text="Upload resume"
        android:textColor="@android:color/white" />


    <android.support.v7.widget.CardView
        android:id="@+id/rlPersnInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvUploadResume"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="11dp"
        android:elevation="4dp"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/lblResumeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="Resume Title:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etResumetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblResumeTitle"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/myfont"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/sepearator2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/etResumetitle"
                android:background="@color/bgGrey"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblResumeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sepearator2"
                android:fontFamily="@font/myfont"
                android:text="Description:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvSubmitResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/round_button"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="SUBMIT"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/etResumeDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tvSubmitResume"
                android:layout_below="@+id/lblResumeDescription"
                android:layout_marginBottom="@dimen/_15sdp"
                android:autofillHints="description"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/myfont"
                android:gravity="clip_vertical|top"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
